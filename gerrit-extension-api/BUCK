  name = 'api',
  srcs = SRCS,
  compile_deps = ['//lib/guice:guice'],
  visibility = ['PUBLIC'],
)

java_sources(
  name = 'api-src',
  srcs = SRCS,
  visibility = ['PUBLIC'],
)
