<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:e='urn:import:com.google.gwt.editor.ui.client'
  xmlns:my='urn:import:com.google.gerrit.client.admin'
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
  ui:generateLocales='default,en'
  >
<ui:with field='res' type='com.google.gerrit.client.admin.AdminResources'/>
<ui:style>
  @external .panelAccess, .contentAccess, .normalAccess, .headerAccess, .headerTextAccess, .headerTableAccess;
  @external .nameAccess, .nameEditAccess, .permissionListAccess, .addContainerAccess, .addSelectorAccess;
  @external .deleteIconAccess, .undoIconAccess, .deletedAccess;

  @eval selectionColor com.google.gerrit.client.Gerrit.getTheme().selectionColor;
  @eval trimColor com.google.gerrit.client.Gerrit.getTheme().trimColor;

  .panelAccess {
    width: 50em;
    position: relative;
  }

  .contentAccess {
    margin-top: 4px;
    margin-bottom: 4px;
    padding-bottom: 2px;
  }

  .normalAccess {
    background-color: trimColor;
  }

  .deletedAccess {
    padding-left: 7px;
    padding-bottom: 2px;
  }

  .panelAccess .headerAccess {
    padding-left: 5px;
    padding-right: 5px;
  }
  .headerTextAccess {
    vertical-align: top;
    white-space: nowrap;
    font-weight: bold;
  }
  .headerTableAccess {
    border: 0;
    width: 100%;
    padding-right: 40px;
  }

  .panelAccess header:hover {
    background-color: selectionColor;
  }

  .nameAccess {
    width: 100%;
  }
  .nameEditAccess {
    width: 100%;
  }

  .permissionListAccess {
    margin-left: 5px;
    margin-right: 5px;
    margin-bottom: 5px;
  }

  .addContainerAccess {
    padding-left: 16px;
    padding-right: 16px;
    font-size: 80%;
  }
  .addContainerAccess:hover {
    background-color: selectionColor;
  }
  .addSelectorAccess {
    font-size: 80%;
  }

  .deleteIconAccess {
    position: absolute;
    top: 5px;
    right: 17px;
  }

  .undoIconAccess {
    position: absolute;
    top: 2px;
    right: 17px;
  }
</ui:style>

<g:HTMLPanel styleName='{style.panelAccess}'>
<div ui:field='normal' class='{style.normalAccess} {style.contentAccess}'>
  <div class='{style.headerAccess}'>
    <table class='{style.headerTableAccess}'><tr>
      <td class='{style.headerTextAccess}'>
        <span ui:field='sectionType'/>
      </td>
      <td width='100%'>
        <my:ValueEditor
            ui:field='name'
            addStyleNames='{style.nameAccess}'
            editTitle='Edit reference pattern'>
          <ui:attribute name='editTitle'/>
          <my:editor>
            <my:RefPatternBox styleName='{style.nameEditAccess}'/>
          </my:editor>
        </my:ValueEditor>
        <span ui:field='sectionName' class='{style.nameAccess}'/>
      </td>
    </tr></table>

    <g:Anchor
        ui:field='deleteSection'
        href='javascript:void'
        styleName='{style.deleteIconAccess} {res.css.deleteIcon}'
        title='Delete this section (and nested rules)'>
      <ui:attribute name='title'/>
    </g:Anchor>
  </div>

  <g:FlowPanel
      ui:field='permissionContainer'
      styleName='{style.permissionListAccess}'/>
  <div ui:field='addContainer' class='{style.addContainerAccess}'>
    <g:ValueListBox
        ui:field='permissionSelector'
        styleName='{style.addSelectorAccess}' />
  </div>
</div>

<div
    ui:field='deleted'
    class='{style.deletedAccess} {res.css.deleted}'
    style='display: none'>
  <span ui:field='deletedName'/>
  <g:Anchor
      ui:field='undoDelete'
      href='javascript:void'
      styleName='{style.undoIconAccess} {res.css.undoIcon}'
      title='Undo deletion'>
    <ui:attribute name='title'/>
  </g:Anchor>
</div>
</g:HTMLPanel>
</ui:UiBinder>
