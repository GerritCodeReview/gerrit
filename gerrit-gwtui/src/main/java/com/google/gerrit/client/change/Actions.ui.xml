<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:c='urn:import:com.google.gerrit.client.change'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:style>
    #change_actions {
      padding-top: 2px;
      padding-bottom: 20px;
    }
    #change_actions button {
      margin: 0 3px 0 0;
      border-color: rgba(0, 0, 0, 0.1);
      text-align: center;
      font-weight: bold;
      border: 1px solid;
      cursor: pointer;
      -webkit-border-radius: 2px;
      -webkit-box-sizing: content-box;
    }
    #change_actions button div {
      width: 70px;
      white-space: nowrap;
    }

    button.normal {
      color: #444;
      background-color: #f5f5f5;
      background-image: -webkit-linear-gradient(top, #f5f5f5, #f1f1f1);
    }
    button.normal div {color: #444;}

    button.red {
      color: #d14836;
      background-color: #d14836;
      background-image: -webkit-linear-gradient(top, #d14836, #d14836);
    }
    button.red div {color: #fff;}

    button.submit {
      float: right;
      color: white;
      background-color: #4d90fe;
      background-image: -webkit-linear-gradient(top, #4d90fe, #4d90fe);
    }
    button.submit div {color: #fff;}
  </ui:style>

  <g:HTMLPanel>
    <g:Button ui:field='cherryPick' styleName='{style.normal}'>
      <div><ui:msg>Cherry Pick</ui:msg></div>
    </g:Button>
    <g:Button ui:field='rebase' styleName='{style.normal}'>
      <div><ui:msg>Rebase</ui:msg></div>
    </g:Button>
    <g:Button ui:field='abandon' styleName='{style.red}'>
      <div><ui:msg>Abandon</ui:msg></div>
    </g:Button>
    <g:Button ui:field='restore' styleName='{style.red}'>
      <div><ui:msg>Restore</ui:msg></div>
    </g:Button>
    <g:Button ui:field='revert' styleName='{style.red}'>
      <div><ui:msg>Revert</ui:msg></div>
    </g:Button>

    <g:Button ui:field='submit' styleName='{style.submit}'>
      <div><ui:msg>Submit</ui:msg></div>
    </g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
