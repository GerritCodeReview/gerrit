<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:style>
    #backport_actions {
      padding-top: 2px;
      padding-bottom: 20px;
    }

    #backport_actions button {
      margin: 6px 3px 0 0;
      border-color: rgba(0, 0, 0, 0.1);
      text-align: center;
      font-size: 8pt;
      font-weight: bold;
      border: 1px solid;
      cursor: pointer;
      color: #444;
      background-color: #f5f5f5;
      background-image: -webkit-linear-gradient(top, #f5f5f5, #f1f1f1);
      -webkit-border-radius: 2px;
      -webkit-box-sizing: content-box;
    }
    #backport_actions button div {
      color: #444;
      height: 10px;
      min-width: 54px;
      line-height: 10px;
      white-space: nowrap;
    }

    #backport_actions button {
      color: #444;
      background-color: #f5f5f5;
      background-image: -webkit-linear-gradient(top, #f5f5f5, #f1f1f1);
    }
    #backport_actions button div {color: #444;}

    #backport_actions button:disabled {
      font-weight: normal;
      background-color: #999;
      background-image: -webkit-linear-gradient(top, #999, #999);
    }
  </ui:style>
  <g:HTMLPanel>
      Backport to:
      <g:ListBox ui:field='backportBranch' styleName=''/>
      <g:Button ui:field='backport' styleName=''>
        <div><ui:msg>Backport</ui:msg></div>
      </g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
