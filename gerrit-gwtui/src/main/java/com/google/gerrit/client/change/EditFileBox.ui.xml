<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:c='urn:import:com.google.gwtexpui.globalkey.client'>
  <ui:with field='res' type='com.google.gerrit.client.change.Resources'/>
  <ui:style>
    .fileContent {
      background-color: white;
      font-family: monospace;
    }
    .cancel { float: right; }
  </ui:style>
  <g:HTMLPanel>
    <div class='{res.style.section}'>
      <div>
        <ui:msg>Path:</ui:msg>
      </div>  
      <div>
        <c:NpTextBox ui:field='file' visibleLength='79'/>
      </div>
      <div>
        <ui:msg>Content:</ui:msg>
      </div> 
      <c:NpTextArea
         visibleLines='30'
         characterWidth='78'
         styleName='{style.fileContent}'
         ui:field='content'/>
    </div>
    <div class='{res.style.section}'>
      <g:Button ui:field='save'
          title='Create new revision edit'
          styleName='{res.style.button}'>
        <ui:attribute name='title'/>
        <div><ui:msg>Save</ui:msg></div>
      </g:Button>
      <g:Button ui:field='cancel'
          styleName='{res.style.button}'
          addStyleNames='{style.cancel}'>
          <div>Cancel</div>
      </g:Button>
      <g:Button ui:field='reload'
          title='Reload the content of the file'
          styleName='{res.style.button}'
          addStyleNames='{style.cancel}'>
          <ui:attribute name='title'/>
          <div>From Git</div>
      </g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
