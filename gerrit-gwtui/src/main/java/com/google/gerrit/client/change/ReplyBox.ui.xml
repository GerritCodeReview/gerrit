<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:c='urn:import:com.google.gwtexpui.globalkey.client'>
  <ui:style type='com.google.gerrit.client.change.ReplyBox.Styles'>
    @eval trimColor com.google.gerrit.client.Gerrit.getTheme().trimColor;

    .replyBox {
      padding: 5px 10px;
      width: 600px;
      max-height: 260px;
    }

    .label_name {
      font-weight: bold;
      text-align: left;
    }
    .label_name input { margin-left: 0; }

    .label_value {
      text-align: center;
    }

    .button {
      margin: 0 3px 0 0;
      border-color: rgba(0, 0, 0, 0.1);
      text-align: center;
      font-size: 11px;
      font-weight: bold;
      border: 1px solid;
      cursor: pointer;
      color: white;
      background-color: #4d90fe;
      background-image: -webkit-linear-gradient(top, #4d90fe, #4d90fe);
      -webkit-border-radius: 2px;
      -webkit-box-sizing: content-box;
    }
    .button div {
      width: 54px;
      white-space: nowrap;
      color: #fff;
      height: 10px;
      line-height: 10px;
    }

    .section {
      border-bottom: 1px solid #eaeaea;
    }
  </ui:style>
  <g:HTMLPanel styleName='{style.replyBox}'>
    <div class='{style.section}'>
      <c:NpTextArea
         visibleLines='5'
         characterWidth='70'
         ui:field='message'/>
    </div>
    <g:Grid ui:field='labels' styleName='{style.section}'/>
    <div>
      <g:Button ui:field='send' styleName='{style.button}'>
        <div><ui:msg>Send</ui:msg></div>
      </g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
