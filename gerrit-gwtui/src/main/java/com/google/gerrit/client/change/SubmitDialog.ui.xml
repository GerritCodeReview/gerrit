<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:style gss='false'>
    @def BUTTON_HEIGHT 14px;

    #submit_dialog {
      width: 500px;
      padding-top: 2px;
      padding-bottom: 20px;
    }

    #submit_dialog button {
      margin: 6px 3px 0 0;
      text-align: center;
      font-size: 8pt;
      font-weight: bold;
      border: 2px solid;
      cursor: pointer;
      color: rgba(0, 0, 0, 0.15);
      background-color: #f5f5f5;
      -webkit-border-radius: 2px;
      -webkit-box-sizing: content-box;
    }
    #submit_dialog button div {
      color: #444;
      min-width: 54px;
      white-space: nowrap;
      height: BUTTON_HEIGHT;
      line-height: BUTTON_HEIGHT;
    }

    #submit_dialog button.submit {
      float: right;
      background-color: #4d90fe;
      background-image: -webkit-linear-gradient(top, #4d90fe, #4d90fe);
    }

    #submit_dialog button.submit div {color: #fff;}

    #submit_dialog div.header,
    #submit_dialog div.footer { margin: 7px; }

  </ui:style>

  <g:FlowPanel>
    <g:Label ui:field='header' styleName='{style.header}'/>

    <g:FlowPanel ui:field='sameTopicChangesPanel'/>

    <g:Label ui:field='footer' styleName='{style.footer}'/>

    <g:Button ui:field='submitBranchButton' styleName='{style.submit}'/>
    <g:Button ui:field='submitTopicButton' styleName='{style.submit}'/>
    <g:Button ui:field='cancel'/>
  </g:FlowPanel>
</ui:UiBinder>
