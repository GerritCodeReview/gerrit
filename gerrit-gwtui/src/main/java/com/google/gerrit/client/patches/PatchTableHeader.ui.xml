<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>


  <ui:with field='res' type='com.google.gerrit.client.GerritResources'/>
  <ui:style>
    @eval selectionColor com.google.gerrit.client.Gerrit.getTheme().selectionColor;
    @eval trimColor com.google.gerrit.client.Gerrit.getTheme().trimColor;
    @eval backgroundColor com.google.gerrit.client.Gerrit.getTheme().backgroundColor;

    .aligner {
      float: left;
      width: 30px;
    }

    .wrapper {
      width: 100%;
      background-color: trimColor;
    }
    
    .wrapper .box {
      width: 100%;
      text-align: center;
    }
    
    .leftWrapper {
      width: 50%;
      float: left;
    }
    
    .rightWrapper {
      width: 50%;
      float: right;
    }

    .leftBox {
      float:left;
      border-right: 1px solid #B0BDCC;
    }

    .rightBox {
      float: right;
    }
    
    .clear {
    	clear: both;
    }
  </ui:style>

  <g:HTMLPanel styleName="{style.wrapper}">
    <div class='{style.aligner}' ui:field='aligner'></div>
    <div class='{style.leftWrapper}'>
      <g:SimplePanel addStyleNames='{style.box} {style.leftBox}' ui:field='sideAPanel'></g:SimplePanel>
    </div>
    <div class='{style.rightWrapper}'>
      <g:SimplePanel addStyleNames='{style.box} {style.rightBox}' ui:field='sideBPanel'></g:SimplePanel>
    </div>
    <div class='{style.clear}'></div>
  </g:HTMLPanel>
</ui:UiBinder>

