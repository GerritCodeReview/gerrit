  name = 'server',
  srcs = glob([SRC + '**/*.java']),
  resources = glob(['src/main/resources/**/*']),
  deps = [
    '//gerrit-extension-api:api',
    '//lib:gwtorm',
  ],
  visibility = ['PUBLIC'],
)
