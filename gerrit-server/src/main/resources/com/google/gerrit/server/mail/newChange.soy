{namespace com.google.gerrit.server.mail.template}

/**
 * The .newChange.vm template will determine the contents of the email related
 * to a user submitting a new change for review.
 * @param change
 * @param email
 * @param fromName
 * @param patchSet
 * @param projectName
 */
{template .newChange autoescape="strict" kind="text"}
  {if $email.reviewerNames}
    Hello{sp}
    {foreach $reviewerName in $email.reviewerNames}
      {$reviewerName},{sp}
    {/foreach}

    {\r}{\n}
    {\r}{\n}

    I'd like you to do a code review.

    {if $email.changeUrl}
      {sp}Please visit

      {\r}{\n}
      {\r}{\n}

      {sp}{sp}{sp}{sp}{$email.changeUrl}

      {\r}{\n}
      {\r}{\n}

      to review the following change.
    {/if}
  {else}
    {$fromName} has uploaded a new change for review.
    {if $email.changeUrl} ( {$email.changeUrl}{/if}
  {/if}{\r}{\n}

  {\r}{\n}
  {\r}{\n}

  Change subject: {$change.subject}{\r}{\n}
  ......................................................................{\r}{\n}

  {\r}{\n}

  {$email.changeDetail}{\r}{\n}

  {if $email.sshHost}
    {\r}{\n}
    {sp}{sp}git pull ssh:{print '//'}{$email.sshHost}/{$projectName} {$patchSet.refName}
    {\r}{\n}
  {/if}

  {if $email.includeDiff}
    {\r}{\n}
    {$email.unifiedDiff}
    {\r}{\n}
  {/if}
{/template}
