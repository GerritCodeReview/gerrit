include_defs('//tools/git.defs')

java_library(
  name = 'init',
  srcs = glob(['src/main/java/**/*.java']),
  deps = [
    '//gerrit-cache-h2:cache-h2',
    '//gerrit-extension-api:api',
    '//gerrit-httpd:httpd',
    '//gerrit-lucene:lucene',
    '//gerrit-openid:openid',
    '//gerrit-pgm:http',
    '//gerrit-pgm:init',
    '//gerrit-pgm:init-api',
    '//gerrit-pgm:util',
    '//gerrit-reviewdb:server',
    '//gerrit-server:server',
    '//gerrit-server/src/main/prolog:common',
    '//gerrit-solr:solr',
    '//gerrit-sshd:sshd',
    '//lib:guava',
    '//lib:gwtorm',
    '//lib/guice:guice',
    '//lib/guice:guice-servlet',
    '//lib/log:api',
    '//lib/jgit:jgit',
  ],
  provided_deps = ['//lib:servlet-api-3_1'],
  visibility = [
    '//:',
    '//gerrit-gwtdebug:gwtdebug',
    '//tools/eclipse:classpath',
  ],
)

genrule(
  name = 'webapp_assets',
  cmd = 'cd src/main/webapp; zip -qr $OUT .',
  cmd_exe = 'cd %SRCDIR% && zip -qr %OUT% .',
  srcs = glob(['src/main/webapp/**/*']),
  deps = [],
  out = 'webapp_assets.zip',
  visibility = ['//:'],
)

genrule(
  name = 'log4j-config__jar',
  cmd = 'jar cf $OUT -C src/main/resources .',
  cmd_exe = 'cd %SRCDIR% && zip -qr %OUT% log4j.properties',
  srcs = ['src/main/resources/log4j.properties'],
  out = 'log4j-config.jar',
)

prebuilt_jar(
  name = 'log4j-config',
  binary_jar = ':log4j-config__jar',
  visibility = [
    '//:',
    '//tools/eclipse:classpath',
  ],
)

prebuilt_jar(
  name = 'version',
  binary_jar = ':gen_version',
  visibility = ['//:'],
)

genrule(
  name = 'gen_version',
  cmd = ';'.join([
    'cd $TMP',
    'mkdir -p com/google/gerrit/common',
    'echo "%s" >com/google/gerrit/common/Version' % git_describe(),
    'zip -9Dqr $OUT .',
  ]),
  cmd_exe = '&&'.join([
    'cd %TMP%',
    'mkdir com\\google\\gerrit\\common',
    'echo %s >com\\google\\gerrit\\common\\Version' % git_describe(),
    'zip -9Dqr %OUT% .',
  ]),
  out = 'version.jar',
)
