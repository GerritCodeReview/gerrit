# To enable this hook, rename this file to "pre-commit".

if git rev-parse --verify HEAD >/dev/null 2>&1
then
	against=HEAD
else
	# Initial commit: diff against an empty tree object
	against=$(git hash-object -t tree /dev/null)
fi

# execute npm run eslint if contains any change within polygerrit-ui
if git diff --cached --name-only | grep -q 'polygerrit-ui'; then
  if npm run eslintfix; then
    # if succeed, make sure add all changed files
    git add --all
  else
    echo "Fail to fix all linter issues.";
    exit 1
  fi
fi