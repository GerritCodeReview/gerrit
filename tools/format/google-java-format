VERSION="1.6"
SHA1="02b3e84e52d2473e2c4868189709905a51647d03"
JAR_NAME="google-java-format-$VERSION-all-deps.jar"

function abs_script_dir_path {
    SOURCE=${BASH_SOURCE[0]}
    while [ -h "$SOURCE" ]; do
      DIR=$( cd -P $( dirname "$SOURCE") && pwd )
      SOURCE=$(readlink "$SOURCE")
      [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
    done
    DIR=$( cd -P $( dirname "$SOURCE" ) && pwd )
    echo $DIR
}

function install_jar {
    root="$(git rev-parse --show-toplevel)"
    if [[ -z "$root" ]]; then
        echo "google-java-format setup requires a git working tree"
        exit 1
    fi
    dir="$root/tools/format"
    url="https://github.com/google/google-java-format/releases/download/google-java-format-$VERSION/$JAR_NAME"
    "$root/tools/download_file.py" -o "$dir/$JAR_NAME" -u "$url" -v "$SHA1"
}

set -e

if [ "$1" == "--setup" ]; then
    $(install_jar)
    echo "Setup successful!"
    exit 0
fi

dir="$(abs_script_dir_path "$0")"

if [ ! -f $dir/$JAR_NAME ]; then
cat <<EOF
Missing $dir/$JAR_NAME!
Run this script with "--setup"
EOF
    exit 1
else
    exec java -jar "$dir/$JAR_NAME" "$@"
fi